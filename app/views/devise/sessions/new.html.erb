<div class="sign-up-wrapper" style="background-image: url(https://res.cloudinary.com/dvallavgs/image/upload/v1584451197/boy-child-clouds-kid-346796_t14hgc.jpg)">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="container">
    <div class="row black_bgr">
        <div class="col-xs-12 col-sm-8 offset-sm-2">
          <h2>Log in</h2>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
           <div>
            <%= f.button :submit, "Log in", class: "btn btn-submit" %>
           </div>
        <% end %>
        <br>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
